{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "esnext",
    "target": "ES2020",
    "lib": ["ESNext"],
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "paths": {
      "@dto/*": ["./src/application/dto/*"],
      "@ports/*": ["./src/application/ports/*"],
      "@interface/*": ["./src/application/interface/*"],
      "@application/*": ["./src/application/*"],

      "@domain/*": ["./src/domain/*"],
      "@infrastructure/*": ["./src/infrastructure/*"]
    }
  },
  "include": ["src/**/*"]
}
